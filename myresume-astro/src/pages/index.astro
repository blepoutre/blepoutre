---

<Layout lang={lang} title="Benjamin Lepoutre â€” Mon CV">
  <Fragment slot="head">
    <link rel="canonical" href="https://benjaminlepoutre.fr/" />
    <link rel="alternate" href="https://benjaminlepoutre.fr/" hreflang="fr" />
    <link rel="alternate" href="https://benjaminlepoutre.fr/en/" hreflang="en" />
    <link rel="alternate" href="https://benjaminlepoutre.fr/" hreflang="x-default" />
    <meta property="og:url" content="https://benjaminlepoutre.fr/" />
  </Fragment>
  <div class="container">
    <LanguageSwitcher currentLang={lang} />
    <aside class="sidebar">
      <ProfilePhoto src="/assets/v3.png" alt="Benjamin Lepoutre" size={180} />
      <Contact lang={lang} />
      <SoftSkills lang={lang} />
      <Language lang={lang} />
    </aside>
    <main class="main-content">
      <Header lang={lang} />
      <Profile lang={lang} />
      <Skills lang={lang} />
      <ExperienceCard>
        <ExperienceList lang={lang} />
      </ExperienceCard>
      <Education lang={lang} />
    </main>
  </div>
</Layout>
