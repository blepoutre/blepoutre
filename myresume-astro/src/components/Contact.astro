---
// src/components/Contact.astro
import contactData from "../data/contact.json";
import { getLocalized } from "../utils/i18n";

const { lang = "fr" } = Astro.props;
const contact = getLocalized(contactData, lang);
---

<style lang="scss">
  @use "../styles/index" as *;

  .phone-mobile {
    display: none;
  }
  .phone-desktop {
    display: inline;
  }

  @media (max-width: 768px) {
    .phone-mobile {
      display: inline;
    }
    .phone-desktop {
      display: none;
    }
  }
</style>

